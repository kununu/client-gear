{
  "name": "kununu-footer",
  "version": "2.0.1",
  "description": "kununu Footer",
  "files": [
    "dist/",
    "package.json"
  ],
  "main": "dist",
  "author": "kununu",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "cross-env": "^3.1.4",
    "kununu-theme": "^3.0.0",
    "node-sass": "^4.5.0",
    "node-sass-module-importer": "^0.1.0",
    "react": "15.4.2",
    "rimraf": "^2.6.0",
    "react-bootstrap": "^0.30.7",
    "react-dom": "15.4.1",
    "nukleus": "^5.0.3"
  },
  "dependencies": {
    "kununu-logo": "^2.0.1"
  },
  "peerDependencies": {
    "kununu-theme": "^3.0.0",
    "nukleus": "^5.0.3",
    "react": ">=15.0.0",
    "react-bootstrap": "^0.30.7",
    "react-dom": "15.4.1"
  },
  "scripts": {
    "prepublish": "yarn dist",
    "babel": "babel $(find ./ -name '*.jsx' ! -name '*.test.jsx' ! -ipath '*node_modules*') --out-dir ./dist",
    "sass": "node-sass ./index.scss --output ./dist --importer node_modules/node-sass-module-importer",
    "clean": "rimraf ./dist",
    "copy-imgs": "mkdir dist/img && cp ./img/*.svg ./dist/img",
    "dist": "npm run clean && cross-env NODE_ENV=production yarn babel && yarn sass && yarn copy-imgs"
  }
}
