{
  "name": "client-gear",
  "jest": {
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "transformIgnorePatterns": [
      "client-gear/node_modules"
    ],
    "moduleDirectories": [
      "packages",
      "node_modules"
    ],
    "setupTestFrameworkScriptFile": "./config/jest/setupTests.js",
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "testURL": "https://www.kununu.com"
  },
  "version": "1.0.0",
  "description": "Layout and theming utilities, shared molecular components for kununu.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kununu/client-gear.git"
  },
  "author": "kununu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kununu/client-gear/issues"
  },
  "homepage": "https://github.com/kununu/client-gear#readme",
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "babel-plugin-transform-rename-import": "2.3.0",
    "cross-env": "5.2.0",
    "lerna": "3.11.1",
    "node-sass": "4.11.0",
    "rimraf": "2.6.3"
  },
  "scripts": {
    "lint": "eslint packages --max-warnings 0 --ext jsx --ext js",
    "test": "jest --verbose --no-cache",
    "test:watch": "jest --watch --verbose",
    "coverage": "jest --coverage",
    "postinstall": "lerna bootstrap",
    "start": "lerna exec npm run start --scope client-gear-playground",
    "dist": "lerna exec npm run dist --ignore client-gear-playground",
    "clean": "rimraf /node_modules && lerna clean --yes"
  }
}
